# AFS Gateway - OpenAI-compatible API for Zelda models
FROM python:3.12-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn[standard] \
    httpx \
    pydantic \
    sse-starlette

# Copy source
COPY src/afs /app/afs

# Create entry point
ENV PYTHONPATH=/app

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "afs.gateway.server:app", "--host", "0.0.0.0", "--port", "8000"]
